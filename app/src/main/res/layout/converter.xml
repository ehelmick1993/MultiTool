<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/convertheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:text="Conversion Tool"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/entervalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertheader"
        android:layout_marginTop="50dp"
        android:text="Enter a value:"
        />

    <EditText
        android:id="@+id/editvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entervalue"
        android:digits="0123456789."
        android:text="0"
        />

    <TextView
        android:id="@+id/convertfrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editvalue"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Convert From:"/>

    <Spinner
        android:id="@+id/spinnerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertfrom"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/convertto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerA"
        android:layout_marginBottom="10dp"
        android:text="Convert To:"/>

    <Spinner
        android:id="@+id/spinnerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertto"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/convertbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerB"
        android:layout_marginBottom="50dp"
        android:text="Calculate"/>

    <TextView
        android:id="@+id/convertanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing"
        android:layout_marginBottom="50dp"/>


</LinearLayout>